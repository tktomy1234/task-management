{
  "bail": 1,
  "verbose": true,
  "collectCoverageFrom": [
    "**/*.{ts,tsx}",
    "!**/node_modules/**",
    "!**/*.test.js",
    "!**/coverage/**",
    "!**/serviceWorker.js",
    "!**/index.js"
  ],
  "projects": [
    {
      "displayName": "backend",
      "testEnvironment": "node",
      "roots": ["<rootDir>/src"],
      "transform": {
        "^.+\\.tsx?$": "ts-jest"
      },
      "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
      "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
    
    }
  ]
}